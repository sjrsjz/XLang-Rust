{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable",
            "cargo": {
                "args": [
                    "build",
                    "--bin=XLang-Rust",
                    "--package=XLang-Rust",
                    //"--release"
                ],
                "filter": {
                    "name": "XLang-Rust",
                    "kind": "bin"
                }
            },
            "args": [
                //"repl"
                "run",
                "examples/use_stdlib.x"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "PYTHONIOENCODING": "UTF-8"
            },
            "console": "integratedTerminal"
        }
    ]
}